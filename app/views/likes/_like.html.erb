<% if user_signed_in? %>
  <% unless topic.user.id == current_user.id%>
    <% if topic.already_liked?(current_user) %>
      <%= link_to(topic_like_path(topic, id: topic.id), method: :delete, remote: true, id: :"index_like_#{topic.id}") do %>
        <i class="fa-lg fas fa-heart icon-btn liked">
          いいねを取り消す
        </i>
      <% end %>
    <% else %>
      <%= link_to(topic_likes_path(topic), method: :post, remote: true, id: :"index_like_#{topic.id}") do %>
          <i class="good-icon-btn">
            いいね！
          </i>
      <% end %>
    <% end %>
  <% end %>
<% end %>

