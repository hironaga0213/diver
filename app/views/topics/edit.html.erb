<%= render "shared/header" %>

<div class="wrapper-topics">
  <%= render "shared/side_bar" %>
  <div class="main-page">
    <div class="main-header">
    </div>
    <div class="topics-main">
      <div class="topics-main-edit">
        <div class="items-sell-contents">
          <div class="items-sell-main">
            <h2 class="items-sell-title">情報を入力してください</h2>
            <%= form_with(model: @topic, local: true) do |f| %>

            <%= render 'shared/error_messages', model: f.object %>

              <%# 投稿画像 %>
              <div class="img-upload">
                <div class="weight-bold-text">
                  投稿画像
                  <span class="indispensable">必須</span>
                </div>
                <div class="click-upload">
                  <p>
                    クリックしてファイルをアップロード
                  </p>
                  <%= f.file_field :image, id:"item-image" %>
                </div>
              </div>
              <%# /投稿画像 %>
              <%# 商品名と商品説明 %>
              <div class="new-items">
                <div class="weight-bold-text">
                  タイトル
                  <span class="indispensable">必須</span>
                </div>
                <%= f.text_area :title, class:"input_text", id:"item_text", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
                <div class="weight-bold-text">
                  場所
                  <span class="indispensable">必須</span>
                </div>
                <%= f.text_area :place, class:"input_text", id:"item_text", placeholder:"場所を記入してください", maxlength:"40" %>
                <div class="items-explain">
                  <div class="weight-bold-text">
                    感想
                    <span class="indispensable">必須</span>
                  </div>
                  <%= f.text_area :impression, class:"input_impression", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
                </div>
              </div>
              <%# /商品名と商品説明 %>

              <%# 下部ボタン %>
              <div class="sell-btn-contents">
                <%= f.submit "変更する" ,class:"sell-btn" %>
                <%=link_to 'もどる', topic_path, class:"back-btn" %>
              </div>
              <%# /下部ボタン %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "tops/detail_page" %>
  <%#= render "topic_show" %>
</div>

<%= render "shared/footer" %>
