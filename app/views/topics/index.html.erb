<%= render "shared/header" %>

<div class="wrapper">
  <div class="side-bar-topic">
    <div class="side-bar-header">
    </div>
    <div class="side-main-back">
      <div class="side-bar-title">
        <h2 class="title-char">
          人気の投稿
        </h2>
      </div>
      <div class="side-bar-main">
        <% @recommend.first(3).each do |recommend| %>
          <%= render partial: "recommend", locals: { recommend: recommend} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="main-page">
    <div class="main-header">
    </div>
    <div class="main-margin">
    </div>
    <div class="topics-main">
      <% @topics.each do |topic| %>
        <%= render partial: "topic_main", locals: { topic: topic} %>
      <% end %>
      <%# 投稿がない場合、ダミー投稿を表示する %>
      <% unless @topics.exists? %>
        <li class='list'>
          <%= link_to '#' do %>
          <%= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
          <div class='item-info'>
            <h3 class='item-name'>
              投稿してね！
            </h3>
            <div class='item-price'>
              <span>99999999円<br>(税込み)</span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
      <%# //投稿がない場合、ダミー投稿を表示する %>
    </div>
  </div>
  
  <%#= render "topic_show" %>
</div>

<%= link_to(new_topic_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>
