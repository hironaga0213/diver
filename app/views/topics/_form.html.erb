<%= form_with(model: topic, local: true) do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :place, "場所" %><br />
    <%= f.text_area :place, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :impression, "感想" %><br />
    <%= f.text_area :impression, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :image, "投稿画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>