<%= render "shared/header" %>

<div class="wrapper">
  <div class="side-bar-topic">
    <div class="side-bar-header">
    </div>
    <div class="side-main-back-user-show">
      <div class="side-bar-title">
        <h2 class="title-char-user">
        </h2>
      </div>
      <div class="side-bar-user-main">
      </div>
    </div>
  </div>

  <div class="main-page">
    <div class="main-header">
    </div>
    <div class="main">
      <div class="inner">
        <div class="user__wrapper">
          <h2 class="page-heading">
            <%= "#{@user.nickname}さんの情報"%>
          </h2>
          <table class="table">
            <tbody>
              <tr>
                <th class="table__col1">名前</th>
                <td class="table__col2"><%= @user.nickname %></td>
              </tr>
              <tr>
                <th class="table__col1">ライセンス</th>
                <td class="table__col2"><%= @profile.license.name %></td>
              </tr>
              <tr>
                <th class="table__col1">経験本数</th>
                <td class="table__col2"><%= @profile.career.name %></td> 
              </tr>
              <tr>
                <th class="table__col1">お住まい</th>
                <td class="table__col2"><%= @profile.prefecture.name %></td>
              </tr>
              <tr>
                <th class="table__col1">休日</th>
                <td class="table__col2"><%= @profile.holiday.name %></td>
              </tr>
              <tr>
                <th class="table__col1">結婚</th>
                <td class="table__col2"><%= @profile.marriage.name %></td>
              </tr>
              <tr>
                <th class="table__col1">ビーチorボート</th>
                <td class="table__col2"><%= @profile.favorite_diving.name %></td>
              </tr>
              <tr>
                <th class="table__col1">好きな海洋生物</th>
                <td class="table__col2"><%= @profile.favorite_fish.name %></td>
              </tr>
              <tr>
                <th class="table__col1">好きなスポット</th>
                <td class="table__col2"><%= @profile.favorite_place.name %></td>
              </tr>
              <tr>
                <th class="table__col1">どんな海が好き？</th>
                <td class="table__col2"><%= @profile.favorite_sea.name %></td>
              </tr>
              <tr>
                <th class="table__col1">自己紹介</th>
                <td class="table__col2"><%= @profile.introduction %></td>
              </tr>
            </tbody>
          </table>
          <div class="user__card">
            <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
            <%# <%= render partial: "prototypes/prototype", collection: @prototypes %>
          </div>
          <% if user_signed_in? %>
            <% if @user.id == current_user.id %>
              <%= link_to '編集する', edit_profile_path(@profile.id), method: :get, class: "item-red-btn" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
