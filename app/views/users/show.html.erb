<%= render "shared/header" %>

<div class="wrapper">
  <%= render "shared/side_bar" %>
  <div class="main-page">
    <div class="main-header">
    </div>

    <div class="main">
      <div class="inner">
        <div class="user__wrapper">
          <h2 class="page-heading">
            <%= "#{@user.nickname}さんの情報"%>
          </h2>
          <table class="table">
            <tbody>
              <tr>
                <th class="table__col1">名前</th>
                <td class="table__col2"><%= @user.nickname %></td>
              </tr>
              <tr>
                <th class="table__col1">ライセンス</th>
                <td class="table__col2"><%= @profile.license.name %></td>
              </tr>
              <tr>
                <th class="table__col1">経験本数</th>
                <td class="table__col2"><%= @profile.career.name %></td> 
              </tr>
              <tr>
                <th class="table__col1">居住地</th>
                <td class="table__col2"><%= @profile.prefecture.name %></td>
              </tr>
              <tr>
                <th class="table__col1">自己紹介</th>
                <td class="table__col2"><%= @profile.introduction %></td>
              </tr>
            </tbody>
          </table>
          <h2 class="page-heading">
            <%= "#{current_user.nickname}さんの投稿一覧"%>
          </h2>
          <div class="user__card">
            <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
            <%# <%= render partial: "prototypes/prototype", collection: @prototypes %>
          </div>
          <% if user_signed_in? %>
            <% if @user.id == current_user.id %>
              <%# <%= link_to '編集', edit_user_profile_path(@profile.id), method: :get, class: "item-red-btn" %> %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
  <div class="detail">
    <div class="detail-top">
    </div>
    <div class="detail-contents-top">
      <h2 class="page-heading">
        <%= "#{current_user.nickname}さんの投稿一覧"%>
      </h2>
    </div>
    <div class="detail-contents">
      <% @topics.each do |topic| %>
        <%= render partial: "user_topic", locals: { topic: topic } %>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>